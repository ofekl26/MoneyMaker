<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_b"
        android:layout_marginBottom="172dp"
        android:background="#15ff05"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/fin_b"
        android:background="#ff3b51"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true" />

    <DigitalClock
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/digitalClock"
        android:layout_marginTop="34dp"
        android:background="#2e2e2e"
        android:textColor="#15ff05"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/fin_b"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/ET"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hourly Income: "
        android:id="@+id/textView"
        android:textSize="18dp"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/start_b"
        android:layout_toStartOf="@+id/ET" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money Calculator!"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="35dp" />

</RelativeLayout>
